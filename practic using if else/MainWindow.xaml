<Window x:Class="practic_using_if_else.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="changeText" Content="Change the label if chacked" HorizontalAlignment="Center" Margin="55,26,0,0" VerticalAlignment="Center" Click="changeText_Click"/>
        <CheckBox x:Name="enableCheckbox" Content="Enable label changing" Grid.Column="1" HorizontalAlignment="Center" Margin="98.8,26,0,0" VerticalAlignment="Center" />
        <TextBlock x:Name="labelToChange" HorizontalAlignment="Center" Margin="0,30,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Press button to set my text" VerticalAlignment="Center" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
